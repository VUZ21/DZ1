<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не верный пароль!"
        android:visibility="invisible"
        android:textColor="@color/red"
        android:id="@+id/feik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textGeektech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гиктек"
        android:fontFamily="serif"
        android:textColor="@color/geektech"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tex1"
        style="@style/place"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать в "
        android:textStyle="bold"
        android:textSize="20sp"
        style="@style/place"
        app:layout_constraintTop_toBottomOf="@id/awatar"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/awatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/geektech"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/place"
        android:layout_marginTop="20dp"

        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Введите логин"
        app:layout_constraintHorizontal_bias="0.504"
       style="@style/place"
        app:layout_constraintTop_toBottomOf="@id/textGeektech"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/parol"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="пароль"
        style="@style/place"
        app:layout_constraintTop_toBottomOf="@id/login"

        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:text="Войти"

      style="@style/place"
        app:layout_constraintBottom_toBottomOf="parent"  />


</androidx.constraintlayout.widget.ConstraintLayout>